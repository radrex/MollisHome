@model ColorIM
<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#edit@(Model.Id)">Промени</button>

<!-- Modal -->
<div class="modal fade" id="edit@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Промяна на информацията за цвета <strong>@Model.Name - @Model.HexValue</strong>?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <fieldset class="border p-3">
          <legend class="w-auto">Промяна на информация за цвят</legend>
          <form method="post" asp-area="Dashboard" asp-controller="Colors" asp-action="Edit">
            <p class="form-group">
              <label asp-for="Name"></label>
              <input asp-for="Name" type="text" placeholder="Name" class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </p>

            <p class="form-group">
              <label asp-for="HexValue"></label>
              <input asp-for="HexValue" type="text" placeholder="HexValue" class="form-control" />
              <span asp-validation-for="HexValue" class="text-danger"></span>
            </p>

            <button type="submit" class="btn btn-success" asp-area="Dashboard" asp-controller="Colors" asp-action="Edit" asp-route-id="@Model.Id">Промени</button>
          </form>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
      </div>
    </div>
  </div>

  @*<div class="modal-backdrop fade show"></div> AFTER OPENING *@
</div>
