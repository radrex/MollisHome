@model IEnumerable<ColorVM>

@{ 
    List<ColorVM> colors = Model.ToList();
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#colors">Цветова Палитра</button>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="colors" tabindex="-1" role="dialog" aria-labelledby="colorsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="colorsModalLabel"><strong>Цветова Палитра</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-hover table-sm">
          <thead>
            <tr>
              <th scope="col">№</th>
              <th scope="col">Цвят</th>
              <th scope="col">Стойност</th>
            </tr>
          </thead>
          <tbody>
            @for (int i = 0; i < colors.Count; i++)
            {
              <tr>
                <th scope="row">@(i+1)</th>
                <td>@colors[i].Name</td>
                <td>@colors[i].HexValue</td>
              </tr>
            }
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Затвори</button>
      </div>
    </div>
  </div>
</div>
