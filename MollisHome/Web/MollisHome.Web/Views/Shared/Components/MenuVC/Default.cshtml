@model List<CategoryVM>

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mollis Home</a>

<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
  <ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
    </li>

    @foreach (CategoryVM category in Model)
    {
      if (category.Categories.Count() != 0)
      {
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @category.Name
          </a>

          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            @foreach (CategoryVM subCategory in category.Categories)
            {
              if (subCategory.Categories.Count() != 0)
              {
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  @subCategory.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  @foreach (CategoryVM subSubCategory in subCategory.Categories)
                  {
                    <a class="dropdown-item" href="#">@subSubCategory.Name</a>
                  }
                </div>
              }
              else
              {
                <a class="dropdown-item" href="#">@subCategory.Name</a>
              }
            }
          </div>
        </li>
      }
      else
      {
        <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@category.Name</a>
        </li>
      }
    }

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Mystery Box</a>
    </li>

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">За Нас</a>
    </li>

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Контакти</a>
    </li>

    <li class="nav-item">
      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </li>
  </ul>

  <partial name="_LoginPartial" />
</div>
